<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <FontFamily x:Key="MainFont">
        ms-appx:///Assets/Fonts/RecMonoCasual.ttf#Rec Mono Casual
    </FontFamily>

    <FontFamily x:Key="MainFontBold">
        ms-appx:///Assets/Fonts/RecMonoCasualBold.ttf#Rec Mono Casual
    </FontFamily>

    <AcrylicBrush x:Key="MainAcrylicBrush" 
                  Opacity="0.7" 
                  TintOpacity="0.4" 
                  TintColor="#20805022" 
                  TintLuminosityOpacity="0.6" 
                  FallbackColor="#FF0D0803"/>

    <SolidColorBrush x:Key="MainFontColor" Color="#F5F1E7"/>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="PageTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFontBold}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="PageSubtitleTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="ListViewHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFontBold}"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="ListViewItemTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFontBold}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="ListViewItemSubtitleTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontWeight" Value="SemiLight"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style x:Key="ListViewItemDefaultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="{ThemeResource MainAcrylicBrush}"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style x:Key="TransparentButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style TargetType="NavigationViewItem">
        <Setter Property="FontFamily" Value="{StaticResource MainFont}"/>
        <Setter Property="Foreground" Value="#F5F1E7"/>
    </Style>

</ResourceDictionary>
