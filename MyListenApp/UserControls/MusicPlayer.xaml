<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyListenApp.UserControls.SongPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyListenApp.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:player="using:MyListenApp.ViewModels.Player"
    xmlns:song="using:MyListenApp.ViewModels.Song"
    xmlns:converters="using:MyListenApp.Converters"
    d:DataContext="{d:DesignInstance Type=player:PlayerViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToPlayIcon x:Key="BoolToPlayIconConverter"/>
        <converters:DurationToSmoothDurationConverter x:Key="SmoothDurationConverter"/>
        <converters:Range100ToRange1FloatConverter x:Key="RangeConverter"/>
    </UserControl.Resources>

    <Grid Padding="16">

        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Foreground" Value="{StaticResource MainFontColor}"/>
            </Style>

            <Style TargetType="FontIcon">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="{StaticResource MainFontColor}"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Spacing="8">
            <Button x:Name="PreviousButton"
                    Click="PreviousButton_Click">
                <FontIcon Glyph="&#xF8AC;" />
            </Button>

            <Button x:Name="PlayButton"
                    Click="PlayButton_Click">
                <FontIcon Glyph="{Binding IsPlaying, Converter={StaticResource BoolToPlayIconConverter}}" />
            </Button>

            <Button x:Name="NextButton"
                    Click="NextButton_Click">
                <FontIcon Glyph="&#xF8AD;" />
            </Button>

            <Button x:Name="ShuffleButton"
                    Click="ShuffleButton_Click">
                <FontIcon Glyph="&#xE8B1;" />
            </Button>

            <Button x:Name="LoopButton"
                    Click="LoopButton_Click">
                <FontIcon Glyph="&#xE8EE;" />
            </Button>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="4"
                    Grid.Column="1">
            <TextBlock Text="{Binding CurrentSong.Title}" TextAlignment="Center"/>
            <TextBlock Text="{Binding CurrentSong.Artist}" TextAlignment="Center" FontSize="12"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Spacing="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Grid.Column="2">
            <Button x:Name="ShowQueueButton">
                <FontIcon Glyph="&#xF156;" />
                <Button.Flyout>
                    <Flyout>
                        <ListView ItemsSource="{Binding Queue}"
                                  SelectedItem="{Binding CurrentSong}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="song:SongViewModel">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Vertical"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Spacing="4">
                                            <TextBlock Text="{x:Bind Title, Mode=OneWay}"/>
                                            <TextBlock Text="{x:Bind Artist, Mode=OneWay}"/>
                                        </StackPanel>

                                        <Button x:Name="LikeSongButton"
                                                Click="LikeSongButton_Click"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE734;" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <StackPanel Orientation="Horizontal"
                        Spacing="4">
                <FontIcon Glyph="&#xE994;" />
                <Slider Width="80"
                        Value="{Binding Volume, Converter={StaticResource RangeConverter}, Mode=TwoWay}"
                        Maximum="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
