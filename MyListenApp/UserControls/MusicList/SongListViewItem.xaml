<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="MyListenApp.UserControls.SongList.SongListViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyListenApp.UserControls.SongList"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:song="using:MyListenApp.ViewModels.Song" 
    xmlns:converters="using:MyListenApp.Converters"
    d:DataContext="{d:DesignInstance Type=song:SongViewModel}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:DurationToSmoothDurationConverter x:Key="smoothduration"/>
    </UserControl.Resources>

    <Grid ColumnSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Title}" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Artist}" Grid.Column="1" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Duration, Converter={StaticResource smoothduration}}" VerticalAlignment="Center" Grid.Column="2"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="5" Grid.Column="3">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </StackPanel.Resources>
            
            <Button x:Name="PlayButton" Click="PlayButton_Click">
                <FontIcon Glyph="&#xE768;" FontSize="12"/>
            </Button>

            <Button x:Name="LikeButton" Click="LikeButton_Click">
                <FontIcon Glyph="&#xE734;" FontSize="12"/>
            </Button>

            <Button x:Name="RenameButton" Click="RenameButton_Click">
                <FontIcon Glyph="&#xE8AC;" FontSize="12"/>
            </Button>

            <Button x:Name="ViewButton" Click="ViewButton_Click">
                <FontIcon Glyph="&#xE890;" FontSize="12"/>
            </Button>
            
        </StackPanel>
    </Grid>
</UserControl>
