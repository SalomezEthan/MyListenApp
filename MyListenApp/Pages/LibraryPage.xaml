<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyListenApp.Pages.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyListenApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:library="using:MyListenApp.ViewModels.Library" 
    xmlns:songList="using:MyListenApp.ViewModels.SongList"
    d:DataContext="{d:DesignInstance Type=library:LibraryViewModel}"
    mc:Ignorable="d">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="BibliothÃ¨que" 
                       Style="{StaticResource PageTitleTextBlockStyle}"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top" 
                        Spacing="4"
                        Grid.Column="1">
                <Button x:Name="ImportButton"
                        Click="ImportButton_Click">
                    <FontIcon Glyph="&#xE710;" />
                </Button>
            </StackPanel>
        </Grid>

        
        <ListView ItemsSource="{Binding SongLists}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="ListView_ItemClick"
                  Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="songList:SongListViewModel">
                    <TextBlock Text="{x:Bind Name, Mode=OneWay}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
