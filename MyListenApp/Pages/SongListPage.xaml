<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MyListenApp.Pages.SongListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyListenApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:songList="using:MyListenApp.ViewModels.SongList"
    xmlns:song="using:MyListenApp.ViewModels.Song"
    xmlns:songControls="using:MyListenApp.UserControls.MusicList"
    d:DataContext="{d:DesignInstance Type=songList:SongListViewModel}"
    mc:Ignorable="d">

    <Grid RowSpacing="36">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="Header">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Margin="16 0 0 0">
                <TextBlock Text="{Binding Name}" Style="{StaticResource PageTitleTextBlockStyle}"/>
                <TextBlock Text="{Binding Count}" Style="{StaticResource PageSubtitleTitleTextBlockStyle}"/>
            </StackPanel>
        </Grid>

        <ListView ItemsSource="{Binding Musics}"
                  SelectionMode="None"
                  IsItemClickEnabled="True"
                  ItemClick="ListView_ItemClick"
                  Grid.Row="1">
            <ListView.Header>
                <Grid ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Titre" Style="{StaticResource ListViewHeaderTextBlockStyle}" Margin="16 0 0 0"/>
                    <TextBlock Text="Artiste" Style="{StaticResource ListViewHeaderTextBlockStyle}" Grid.Column="1"/>
                    <TextBlock Text="DurÃ©e" Style="{StaticResource ListViewHeaderTextBlockStyle}" Grid.Column="2"/>
                    <TextBlock Text="Options" Style="{StaticResource ListViewHeaderTextBlockStyle}" Padding="0 0 0 16" Grid.Column="3"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="song:SongViewModel">
                    <songControls:SongListViewItem ViewModel="{x:Bind}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
